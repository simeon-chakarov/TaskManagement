@model List<TaskManagement.Models.Task>

<h2>@ViewBag.Title</h2>

@if (Model.Count > 0)
{
    <ul>
        @foreach (var task in Model)
        {
            <li>@Html.ActionLink(task.Name, "Edit", new { id = task.Id })</li>
        }
    </ul>
}
else
{
    <div class="form-group">
        <text>There are no tasks for this developer. </text>
    </div>
}